:80 {
        log {
                output stdout
                level info
        }

        root * /srv/sincromisor-client
        file_server

        reverse_proxy /offer* {
                to http://sincro-rtc:8002
                #    header_up X-Forwarded-For {remote}
                #    header_up X-Forwarded-Proto {scheme}
        }

        reverse_proxy /config* {
                to http://sincro-rtc:8002
                #    header_up X-Forwarded-For {remote}
                #    header_up X-Forwarded-Proto {scheme}
        }
}
