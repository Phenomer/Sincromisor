:80 {
    log {
            output stdout
            level info
    }

    root * /srv/sincromisor-client
    file_server

    reverse_proxy /api/* {
        dynamic a {
            name sincromisor.service.consul
            port 8002
            resolvers sincro-consul-agent:8600
            versions ipv4
            refresh 5s
        }
        lb_policy random
    }
}
